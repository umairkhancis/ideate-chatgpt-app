{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Domain Model Configuration Schema",
  "description": "Configuration schema for defining business domain models in the Ideate platform",
  "type": "object",
  "required": [
    "domain",
    "label",
    "labelPlural",
    "fields"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "description": "Unique identifier for the domain (lowercase, hyphenated)",
      "pattern": "^[a-z][a-z0-9-]*$",
      "examples": [
        "products",
        "customers",
        "tasks"
      ]
    },
    "label": {
      "type": "string",
      "description": "Singular display name for the entity",
      "examples": [
        "Product",
        "Customer",
        "Task"
      ]
    },
    "labelPlural": {
      "type": "string",
      "description": "Plural display name for the entity",
      "examples": [
        "Products",
        "Customers",
        "Tasks"
      ]
    },
    "icon": {
      "type": "string",
      "description": "Emoji or icon identifier for the entity",
      "examples": [
        "üè∑Ô∏è",
        "üë§",
        "‚úÖ"
      ]
    },
    "description": {
      "type": "string",
      "description": "Brief description of the domain model"
    },
    "branding": {
      "type": "object",
      "description": "Visual branding configuration",
      "properties": {
        "primaryColor": {
          "type": "string",
          "description": "Primary brand color (hex)",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#3B82F6"
        },
        "secondaryColor": {
          "type": "string",
          "description": "Secondary brand color (hex)",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#10B981"
        },
        "logo": {
          "type": "string",
          "description": "Logo URL (optional)"
        }
      }
    },
    "fields": {
      "type": "array",
      "description": "Field definitions for the domain model",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "key",
          "label",
          "type"
        ],
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique field identifier (camelCase)",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "label": {
            "type": "string",
            "description": "Display label for the field"
          },
          "type": {
            "type": "string",
            "description": "Data type of the field",
            "enum": [
              "string",
              "text",
              "number",
              "boolean",
              "date",
              "datetime"
            ]
          },
          "required": {
            "type": "boolean",
            "description": "Whether the field is required",
            "default": false
          },
          "hidden": {
            "type": "boolean",
            "description": "Whether the field is hidden in UI",
            "default": false
          },
          "showInList": {
            "type": "boolean",
            "description": "Whether to show in list view",
            "default": false
          },
          "showInDetail": {
            "type": "boolean",
            "description": "Whether to show in detail view",
            "default": true
          },
          "placeholder": {
            "type": "string",
            "description": "Placeholder text for input fields"
          },
          "helpText": {
            "type": "string",
            "description": "Helper text displayed below the field"
          },
          "min": {
            "type": "number",
            "description": "Minimum value (for number fields)"
          },
          "max": {
            "type": "number",
            "description": "Maximum value (for number fields)"
          },
          "default": {
            "description": "Default value for the field"
          }
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Feature flags for the domain model",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Enable create functionality",
          "default": true
        },
        "update": {
          "type": "boolean",
          "description": "Enable update functionality",
          "default": true
        },
        "delete": {
          "type": "boolean",
          "description": "Enable delete functionality",
          "default": true
        },
        "archive": {
          "type": "boolean",
          "description": "Enable archive/restore functionality",
          "default": false
        },
        "search": {
          "type": "boolean",
          "description": "Enable search functionality",
          "default": false
        }
      }
    }
  }
}